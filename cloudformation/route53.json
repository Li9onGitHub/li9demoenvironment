{

"AWSTemplateFormatVersion": "2010-09-09",

"Parameters": {

  "GUID": {
    "Description": "Unique GUID",
    "Type": "String",
    "MinLength": "3",
    "MaxLength": "3"
  }

},

"Resources": {

  "DNSZone" : {
    "Type" : "AWS::Route53::RecordSet",
    "Properties" : {
      "HostedZoneId" :  "ZG1LSIRFXEMSJ",
      "Comment" : "DNS name for my instance.",  
      "Name" :  { "Fn::Join": [ ".", [ { "Ref": "GUID" }, "demo.li9.com"  ]] },
      "Type" : "A",
      "TTL" : "900",
      "ResourceRecords" : [ "1.1.1.1" ]
    }
  },

  "DNSRecord" : {
    "Type" : "AWS::Route53::RecordSet",
    "Properties" : {
      "HostedZoneId" :  "ZG1LSIRFXEMSJ",
      "Comment" : "DNS name for my instance.",
      "Name" :  { "Fn::Join": [ ".", [ "*", { "Ref": "GUID" }, "demo.li9.com"  ]] },
      "Type" : "A",
      "TTL" : "900",
      "ResourceRecords" : [ "1.1.1.1" ]
    }
  }

}





}
